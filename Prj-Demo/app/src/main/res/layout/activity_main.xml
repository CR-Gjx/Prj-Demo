<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gcls.prj_demo.MainActivity">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "3C project!"
        android:layout_below="@id/info"
        android:layout_alignRight="@+id/info"
        android:layout_alignEnd="@+id/info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="蓝牙连接"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/btnBtConnect"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnBtConnect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/testText" />

    <LinearLayout
        android:id="@+id/BluetoothList"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnBtConnect"
        android:layout_toEndOf="@+id/btnBtConnect"></LinearLayout>

    <Button
        android:text="TurnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Right"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnBtConnect"
        android:layout_alignStart="@+id/btnBtConnect" />

    <Button
        android:text="视频传输"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Backward"
        android:layout_alignRight="@+id/Backward"
        android:layout_alignEnd="@+id/Backward"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:id="@+id/btnVideo" />

    <Button
        android:text="重力模式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btngravity"
        android:layout_alignBaseline="@+id/btnVideo"
        android:layout_alignBottom="@+id/btnVideo"
        android:layout_toRightOf="@+id/btnVideo"
        android:layout_toEndOf="@+id/btnVideo" />

    <Button
        android:text="语音模式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnVideo"
        android:layout_alignLeft="@+id/btnVideo"
        android:layout_alignStart="@+id/btnVideo"
        android:id="@+id/btnSpeech" />

    <Button
        android:text="手势模式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGesture"
        android:layout_below="@+id/btngravity"
        android:layout_toRightOf="@+id/btnVideo"
        android:layout_toEndOf="@+id/btnVideo" />

    <Button
        android:text="Backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Backward"
        android:layout_below="@+id/Right"
        android:layout_alignLeft="@+id/forward"
        android:layout_alignStart="@+id/forward" />

    <Button
        android:text="forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forward"
        android:layout_above="@+id/Right"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2"
        android:layout_marginBottom="23dp" />

    <Button
        android:text="TurnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Left"
        android:layout_below="@+id/forward"
        android:layout_alignRight="@+id/testText"
        android:layout_alignEnd="@+id/testText" />

    <Button
        android:text="人脸检测"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFace"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSpeech"
        android:layout_alignStart="@+id/btnSpeech" />

</RelativeLayout>
